<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <Color x:Key="LightThemeBackgroundColor">#F2F2F2</Color>
    <Color x:Key="DarkThemeBackgroundColor">#1E1E1E</Color>
    <Color x:Key="LightThemeTextColor">#000000</Color>
    <Color x:Key="ActiveColor">#EAEAEA</Color>
    <Color x:Key="DarkThemeTextColor">#FFFFFF</Color>
    <Color x:Key="LightThemeAccentColor">#0078D4</Color>
    <Color x:Key="DarkThemeAccentColor">#3A8FB7</Color>
    <Color x:Key="ColorOnCloseButton">Red</Color>

    <SolidColorBrush x:Key="BackgroundBrush"
                     Color="{StaticResource LightThemeBackgroundColor}"/>
    <SolidColorBrush x:Key="TextBrush"
                     Color="{StaticResource LightThemeTextColor}"/>
    <SolidColorBrush x:Key="ActiveBrush"
                     Color="{DynamicResource ActiveColor}"/>
    <SolidColorBrush x:Key="AccentBrush"
                     Color="{StaticResource LightThemeAccentColor}"/>

</ResourceDictionary>