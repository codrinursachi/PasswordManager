<UserControl x:Class="PasswordManager.CustomControls.PasswordDataGrid"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PasswordManager.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="ListControl">

    <UserControl.Resources>
        <Style TargetType="Border">
            <Setter Property="BorderBrush" Value="LightGray"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="CornerRadius" Value="5"/>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#E2E2E2"/>
                </Trigger>
                <Trigger Property="IsMouseOver" Value="False">
                    <Setter Property="Background" Value="White"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="{x:Type DataGridColumnHeader}">
            <Setter Property="BorderBrush"
                    Value="LightGray"/>
            <Setter Property="BorderThickness"
                    Value="0.5"/>
            <Setter Property="Height"
                    Value="28"/>
            <Setter Property="HorizontalContentAlignment"
                    Value="Center"/>
        </Style>
        <Style TargetType="{x:Type DataGridCell}">

            <Setter Property="BorderBrush"
                    Value="LightGray"/>
            <Setter Property="BorderThickness"
                    Value="0.5"/>
            <Setter Property="Height"
                    Value="28"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="{x:Type DataGridCell}">
                        <Border BorderBrush="LightGray" BorderThickness="0.5">
                            <ContentPresenter VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>


    </UserControl.Resources>



    <Border Background="White"
            Padding="10"
            CornerRadius="5">

        <DataGrid x:Name="pwdList"
                  Background="Transparent"
                  Foreground="{StaticResource TextBrush}"
                  DataContext="{Binding ElementName=ListControl}"
                  ItemsSource="{Binding PasswordList}"
                  AutoGenerateColumns="False"
                  GridLinesVisibility="None"
                  BorderThickness="0.5"
                  CanUserAddRows="false">


            <DataGrid.Columns>
                <DataGridTemplateColumn Header="Favorite"
                                        Width="60">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <CheckBox x:Name="favChk"
                                      IsChecked="{Binding Favorite}"
                                      IsEnabled="False"/>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
                <DataGridTextColumn Header="Url"
                                    Width="150"
                                    Binding="{Binding Url}"/>
                <DataGridTextColumn Header="Username"
                                    Width="120"
                                    Binding="{Binding Username}"/>
                <DataGridTextColumn Header="Password"
                                    Width="120"
                                    Binding="{Binding Password}"/>
                <DataGridTextColumn Header="Expiration"
                                    Width="90"
                                    Binding="{Binding ExpirationDate}"/>
                <DataGridTextColumn Header="Category"
                                    Width="120"
                                    Binding="{Binding CategoryPath}"/>
                <DataGridTextColumn Header="Tags"
                                    Width="120"
                                    Binding="{Binding Tags}"/>
                <DataGridTextColumn Header="Notes"
                                    Width="120"
                                    Binding="{Binding Notes}"/>
                <DataGridTemplateColumn Header="Actions"
                                        Width="150">
                    <DataGridTemplateColumn.CellTemplate>
                        <DataTemplate>
                            <StackPanel Orientation="Horizontal">
                                <TextBlock x:Name="cpyClipboard"
                                           Style="{StaticResource actionableText}"
                                           Text="Copy"
                                           MouseLeftButtonUp="cpyClipboardMouseLeftButtonUp"
                                           Margin="5"/>
                                <TextBlock x:Name="showPwd"
                                           Style="{StaticResource actionableText}"
                                           Text="Show"
                                           MouseLeftButtonUp="showPwdMouseLeftButtonUp"
                                           Margin="5"/>
                                <TextBlock x:Name="delPwd"
                                           Style="{StaticResource actionableText}"
                                           Text="Delete"
                                           MouseLeftButtonUp="delPwd_MouseLeftButtonUp"
                                           Margin="5"/>
                            </StackPanel>
                        </DataTemplate>
                    </DataGridTemplateColumn.CellTemplate>
                </DataGridTemplateColumn>
            </DataGrid.Columns>
        </DataGrid>
    </Border>

</UserControl>
