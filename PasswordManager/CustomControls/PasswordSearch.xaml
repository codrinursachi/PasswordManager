<UserControl x:Class="PasswordManager.CustomControls.PasswordSearch"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:PasswordManager.CustomControls"
             mc:Ignorable="d"
             d:DesignHeight="450"
             d:DesignWidth="800"
             x:Name="pwdSearch">
    
        
    <StackPanel Orientation="Horizontal">

        <TextBlock Text="Search" VerticalAlignment="Center"/>
        <Border Background="White" CornerRadius="10" HorizontalAlignment="Left"
Height="40" Padding="10" Margin="20,0,0,0">
            <TextBox x:Name="searchBar"
                 DataContext="{Binding ElementName=pwdSearch}"
                 Width="600"
                 Style="{StaticResource textInput}"
                 Padding="0"
                 BorderThickness="0"
                 Text="{Binding SearchCriteria, UpdateSourceTrigger=PropertyChanged}"/>
        </Border>

    </StackPanel>

</UserControl>
